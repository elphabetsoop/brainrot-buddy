{
  "name": "brainrot-buddy",
  "displayName": "brainrot-buddy",
  "description": "Your brainrot coding companion.",
  "publisher": "brainrot-labs",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/brainrot-labs/brainrot-buddy"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "brainrot-buddy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "brainrot-buddy.showPet",
        "title": "Brainrot Buddy: Show Pet"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "brainrotBuddyContainer",
          "title": "Brainrot Buddy",
          "icon": "$(heart)"
        }
      ]
    },
    "views": {
      "brainrotBuddyContainer": [
        {
          "type": "webview",
          "id": "brainrotBuddy.petView",
          "name": "Brainrot Buddy"
        }
      ]
    },
    "configuration": {
      "properties": {
        "brainrot-buddy.longFunctionThreshold": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "description": "Number of lines after which a function is considered too long."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}